<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.AddGoalFragment"
    android:orientation="vertical"
    android:padding="20sp"
    android:background="@drawable/rounded"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:backgroundTint="@color/green_1"
        android:layout_marginBottom="10sp"
        android:layout_marginTop="-16sp"
        android:src="@drawable/baseline_grabber_24"
    />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New goal"
        android:textSize="30sp"
        android:textColor="@color/green_2"
        android:gravity="center_horizontal"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Description"
        />
    </com.google.android.material.textfield.TextInputLayout>

    <EditText
        android:id="@+id/goalValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Insert the goal price" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/addCheck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Add Check"
            />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.chip.ChipGroup
        android:id="@+id/checkChipGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.google.android.material.chip.ChipGroup>
    
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create new goal"
        android:backgroundTint="@color/green_1"
        android:textColor="@color/white"
        android:textAlignment="center"
        app:cornerRadius="12dp"
        />
</LinearLayout>