<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Selected and enabled state -->
    <item android:state_enabled="true" android:state_focused="true">
        <shape android:shape="rectangle">
            <padding android:bottom="12sp" android:left="15sp" android:right="12sp" android:top="12sp"/>
            <solid android:color="@color/white"/>
            <corners android:radius="12dp"/>
            <stroke android:color="@color/green_1" android:width="1dp"/>
        </shape>
    </item>

    <!-- Enabled state -->
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <padding android:bottom="12sp" android:left="12sp" android:right="12sp" android:top="12sp"/>
            <solid android:color="@color/white"/>
            <corners android:radius="12dp"/>
            <stroke android:color="@color/gray_3" android:width="1dp"/>
        </shape>
    </item>
</selector>
